---
import type { TableRowElement } from "ox-json-types";
import Contents from "./Contents.astro";

interface Props {
    node: TableRowElement,
}

const { node } = Astro.props;
---
<tr>
    {node.contents.map((column) => <th><Contents contents={column.contents} /></th>)}
</tr>
<style>
 th {
     border-bottom: 3px solid var(--primary);
     padding: 0 0.5rem;
 }
</style>
